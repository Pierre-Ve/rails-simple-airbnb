<div class="card m-3 shadow col-lg-3 rounded">
  <%= image_tag flat.img_url, alt: 'nature' ,class: "w-100"%>
  <div class="p-3 bg-light">
    <h2><%= flat.name %></h2>
    <p><%= flat.address %></p>
    <div class="d-flex justify-content-between">
      <i class="fa-solid fa-people-group ">
        <%= flat.number_of_guest %>
      </i>
      <i class="fa-solid fa-euro-sign">
        <%= flat.price_per_night %>
      </i>
    </div>
  </div>
    <div class="bg-white w-100 d-flex justify-content-between align-items-center p-3">
      <%=link_to "More info", flat_path(flat), class: "stretched-link" %>
      <%= link_to "Edit", edit_flat_path(flat)%>
      <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete}  %>
    </div>
</div>
